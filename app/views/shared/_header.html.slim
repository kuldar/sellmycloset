header.header
  .header-wrapper

    / Logo
    = link_to root_path, class: 'header-logo' do
      span = t('site.name')
      = image_tag 'logo-mark.svg'

    .header-alerts
      = render 'shared/flash'

    / Header Nav
    nav.header-nav
      = link_to 'Populaarsed tooted', '/products', class: 'header-nav-link'
      = link_to 'Kategooriad', '#', class: 'header-nav-link'
      - if user_signed_in?
        - if current_user.buyer?
          = link_to t('.become_seller'), become_seller_path, class: 'header-nav-link'
        - elsif current_user.seller? || current_user.admin?
          = link_to t('.add_product'), new_product_path, class: 'header-nav-btn'
        - elsif current_user.admin?
          = link_to t('.admin'), admin_root_path, class: 'header-nav-link'
        = link_to user_path(current_user), class: 'header-nav-link' do
          = image_tag current_user.avatar, class: 'header-nav-avatar'
      - else
        = link_to t('shared.header.sign_in_with_facebook'), user_facebook_omniauth_authorize_path, class: 'header-nav-btn'