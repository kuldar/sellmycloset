.main.is-purple style="background-image: url('#{ image_path('home-hero-bg.jpg') }');"
  .form-title Logi e-maili aadressiga sisse

  = form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form' }) do |f|
    .card.is-small
      .card-section.is-gray.is-padded
        = devise_error_messages!

        .form-group
          = f.label :email, class: 'form-label'
          = f.email_field :email, autofocus: true, class: 'form-input', placeholder: t('example.email')

        .form-group
          = f.label :password, class: 'form-label'
          = f.password_field :password, autocomplete: "off", class: 'form-input', placeholder: t('example.password')

        .form-footer
          = f.submit t('.sign_in'), class: 'form-btn is-main', data: { disable_with: "Login sisse.."}

          - if devise_mapping.rememberable?
            .form-checkbox-group.pull-right
              = f.check_box :remember_me, class: 'form-checkbox', checked: true
              = f.label :remember_me, class: 'form-checkbox-label'

  .form-bottom
    span.form-bottom-text Pole veel liitunud? Registeeru 
    =<> link_to 'e-mailiga', new_user_registration_path, class: 'form-bottom-link'
    span.form-bottom-text v√µi
    =< link_to 'Facebookiga', user_facebook_omniauth_authorize_path, class: 'form-bottom-link'